@{ ViewBag.Title = "Recept Fórum";
    var eloetel = "eloetel";
    var reggeli = "reggeli";
    var foetel = "foetel";
    var desszert = "desszert";}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Recept Fórum</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="javascript:location.href='@Url.Action("Index", "Home")';">Recept fórum</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Kategóriák<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Összes", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Összes recept" })
                            </li>
                            <li>
                                <a href="javascript:location.href='\@Url.Action("Details","Categories", new {friendlyUrl=@reggeli})';">Reggeli</a>
                            </li>
                            <li>
                                <a href="javascript:location.href='\@Url.Action("Details","Categories", new {friendlyUrl=@eloetel})';">Előétel</a>
                            </li>
                            <li>
                                <a href="javascript:location.href='\@Url.Action("Details","Categories", new {friendlyUrl=@foetel})';">Főétel</a>
                            </li>
                            <li>
                                <a href="javascript:location.href='\@Url.Action("Details","Categories", new {friendlyUrl=@desszert})';">Desszert</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                @using (Html.BeginForm("Search", "Recipes", FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search" }))
                {
                    <div class="form-group">
                        @*@ViewData["title"]*@
                        <input type="text" class="form-control" placeholder="Étel neve" name="title"/>
                    </div>
                    <button type="submit" class="btn btn-default">Keresés</button>
                }
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Felhasználó<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container body-content" id="pagination-visible" >
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Recept Fórum</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/main")
    @RenderSection("scripts", required: false)
    </body>
</html>