@model WebPPublished.Models.CategoriesListData

@{ ViewBag.Title = "Recept Fórum";
    var i = 0;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Recept Fórum</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div>
        @foreach (var item in @Model.AllCategory)
        {
            if (i == 0)
            {
                <input type="button" onclick="location.href = '\@Url.Action("Index", "Home")';" value="Összes" />
            }
            <input type="button" onclick="location.href = '\@Url.Action("Details","Category", new { @item.FriendlyUrl })';" value="@item.DisplayName" />
            i = 1;
        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>